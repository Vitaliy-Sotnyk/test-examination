{
  "compilerOptions": {
    "target": "esnext",            
    "module": "commonjs",       
    "strict": true,              
    "skipLibCheck": true,    
    "esModuleInterop": true,
    "resolveJsonModule": true, 
    "forceConsistentCasingInFileNames": true,
    "types": ["mocha", "node", "@playwright/test"],
    "outDir": "./dist",
    "lib": ["esnext", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "tests/**/*",
    "playwright.config.ts"
  ]
}